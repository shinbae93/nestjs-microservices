{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/product/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/product/tsconfig.app.json"
  },
  "projects": {
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "product": {
      "type": "application",
      "root": "apps/product",
      "entryFile": "main",
      "sourceRoot": "apps/product/src",
      "compilerOptions": {
        "tsConfigPath": "apps/product/tsconfig.app.json"
      }
    },
    "user": {
      "type": "application",
      "root": "apps/user",
      "entryFile": "main",
      "sourceRoot": "apps/user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user/tsconfig.app.json"
      }
    },
    "order": {
      "type": "application",
      "root": "apps/order",
      "entryFile": "main",
      "sourceRoot": "apps/order/src",
      "compilerOptions": {
        "tsConfigPath": "apps/order/tsconfig.app.json"
      }
    },
    "review": {
      "type": "application",
      "root": "apps/review",
      "entryFile": "main",
      "sourceRoot": "apps/review/src",
      "compilerOptions": {
        "tsConfigPath": "apps/review/tsconfig.app.json"
      }
    },
    "promotion": {
      "type": "application",
      "root": "apps/promotion",
      "entryFile": "main",
      "sourceRoot": "apps/promotion/src",
      "compilerOptions": {
        "tsConfigPath": "apps/promotion/tsconfig.app.json"
      }
    }
  },
  "monorepo": true,
  "root": "apps/product"
}
